<section class="pt-4 pb-4">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 pt-2">
                        <form action="/vistas/resp/edit/{{resp.Id}}" method="POST">
                            <div class="form-group">
                                <h3>Editar Respuesta</h3>
                            </div>

                            <div class="form-row">
                                <div class="col form-group"> 
                                    <textarea name="Respuesta" class="form-control" placeholder="Respuesta" autofocus>{{resp.Respuesta}}</textarea>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <input type="text" value="{{resp.fkPregunta}}" name="fkPregunta" class="form-control" placeholder="Pregunta">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <input type="text" value="{{resp.fkUsuario}}" name="fkUsuario" class="form-control" placeholder="Usuario">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group">
                                    <label>Imagen</label><br>
                                    <input type="file" name="Imagen" value="{{resp.Imagen}}">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group"> 
                                    <button type="submit" class="btn btn-b btn-block">Aceptar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
    </div>  
</section>