<section class="pt-4 pb-4">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 pt-2">
                        <form action="/vistas/respuestas" method="POST">
                            <div class="form-group">
                                <h3>Nueva Respuesta</h3>
                            </div>

                            <div class="form-row">
                                <div class="col form-group"> 
                                    <textarea name="Respuesta" class="form-control" placeholder="Respuesta" autofocus></textarea>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <input type="text" name="fkPregunta" class="form-control" placeholder="Pregunta">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <input type="text" name="fkUsuario" class="form-control" placeholder="Usuario">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group">
                                    <label>Imagen</label><br>
                                    <input type="file" name="Imagen">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group"> 
                                    <button type="submit" class="btn btn-b btn-block">Agregar Respuesta</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
    </div>  
</section>