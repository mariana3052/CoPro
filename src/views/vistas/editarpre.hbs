<section class="pt-4 pb-4">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 pt-2">
                        <form action="/vistas/edit/{{pre.Id}}" method="POST">
                            <div class="form-group">
                                <h3>Editar Pregunta</h3>
                            </div>

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <input type="text" value="{{pre.Titulo}}" name="Titulo" class="form-control" placeholder="Título" autofocus>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group"> 
                                    <textarea name="Descripcion" class="form-control" placeholder="Descripción">{{pre.Descripcion}}</textarea>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <select name="Categoria" class="form-control">
                                        <option hidden selected>{{pre.Categoria}}</option>
                                        <option>MySQL</option>
                                        <option>SQL Server</option>
                                        <option>C#</option>
                                        <option>C++</option>
                                        <option>Java Script</option>
                                        <option>NodeJS</option>
                                    </select>
                                </div>
                            </div>  

                            <div class="form-row">
                                <div class="col-12 col-md-12 form-group">
                                    <input type="text" value="{{pre.fkUsuario}}" name="fkUsuario" class="form-control" placeholder="Usuario">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group">
                                    <label>Imagen</label><br>
                                    <input type="file" value="{{pre.Imagen}}" name="Imagen">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col form-group"> 
                                    <button type="submit" class="btn btn-b btn-block">Aceptar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>  
    </div>  
</section>