<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header" style="background-color:#c9bead">
          <h3>Iniciar Sesión</h3>
        </div>
        <img src="/img/perfil.png" class="card-img-top mx-auto m-2 w-50">
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="form-group">
              <input type="text" name="Usuario" placeholder="Usuario" class="form-control" autofocus>
            </div>

            <div class="form-group">
              <input type="password" name="Contrasena" placeholder="Contraseña" class="form-control">
            </div>

            <button class="btn btn-success btn-block">Ingresar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>